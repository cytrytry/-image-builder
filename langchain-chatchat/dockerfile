
FROM nvidia/cuda:12.8.0-devel-ubuntu22.04
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# for China
# RUN cp /etc/apt/sources.list /etc/apt/sources.list.bak && \
#    sed -i 's#http://.*.ubuntu.com/#http://mirrors.tuna.tsinghua.edu.cn/#' /etc/apt/sources.list
# install supervisord
RUN apt update -y && apt install -y supervisor && \
    mkdir -p /var/log/supervisord && \
    mkdir -p /opt/supervisor && \
    apt clean \

# 安装系统依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python-is-python3 python3-pip \
    python3-dev\
    git \
    libgl1 \
    libglib2.0-0 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


# 设置工作目录
WORKDIR /root

# =========================
# 第二阶段：安装 Xinference 和 Langchain-Chatchat
# =========================

# 先安装 Xinference
RUN pip install xinference

COPY xinference/xinference.sh       /opt/supervisor/xinference.sh
COPY xinference/xinference.conf     /etc/supervisor/conf.d/xinference.conf

# 再安装 Langchain-Chatchat（带 Xinference 支持）
RUN git clone https://github.com/chatchat-space/Langchain-Chatchat.git /root/Langchain-Chatchat && \
    cd /root/Langchain-Chatchat && \
    pip install ".[xinference]" -U


COPY langchain/langchain.sh       /opt/supervisor/langchain.sh
COPY langchain/langchain.conf     /etc/supervisor/conf.d/langchain.conf


# 暴露端口（Xinference: 9997, Langchain: 8000）
#EXPOSE 9997 8000

# 启动 supervisord（前台运行，Docker 要求）
ENTRYPOINT ["/usr/bin/supervisord", "-c", "/etc/supervisor/supervisord.conf", "-n"]